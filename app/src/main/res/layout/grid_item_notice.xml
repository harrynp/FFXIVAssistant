<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardCornerRadius="4dp"
        android:elevation="@dimen/card_elevation"
        android:translationZ="@dimen/card_press_translation_z"
        android:stateListAnimator="@animator/card_state_anim"
        android:layout_marginStart="@dimen/card_horizontal_margin"
        android:layout_marginEnd="@dimen/card_horizontal_margin"
        android:layout_marginTop="@dimen/card_vertical_margin"
        android:padding="8dp"
        android:focusable="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Title" />


            <TextView
                android:id="@+id/tv_notice_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="13sp"
                android:textColor="@color/secondary_text"
                app:layout_constraintStart_toStartOf="@+id/tv_notice_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_notice_title"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Post Time: 02 May 2018" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>